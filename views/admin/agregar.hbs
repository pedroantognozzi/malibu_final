<div class="container" style="margin-top: 100px">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar nuevo producto</h4>
            <form action="/admin/productos/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group" style="margin-top: 20px;">
                    <input type="text" class="form-control" placeholder="Titulo del producto" name="titulo">
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <textarea class="form-control" placeholder="Descripcion del producto" name="subtitulo"></textarea>
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                </div>
                <button type="submit" class="btn btn-primary mb-3" style="margin-top: 20px">Guardar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>