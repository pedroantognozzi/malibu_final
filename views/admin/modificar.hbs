<div class="container" style="margin: 100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar datos de producto nº {{producto.id}}</h4>
            <form action="/admin/productos/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{producto.id}}" name="id">
                <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{producto.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Descripción</label>
                    <textarea class="form-control" name="subtitulo">{{producto.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <p>
                        <label class="mt-3">Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{producto.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Modificar</button>
            </form>

            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
    </div>
</div>


